<metal:block use-macro="load: amnesia:templates/layout.pt">
<metal:block fill-slot="content" tal:define="cl cl['classpeople']">
    <div id="main">
    <div class="container">
        <div class="row">
        <h1>${cl.term}</h1>
        
        <h2>People</h2>
        <p>People with <strong>${cl.term}</strong> expertise</p>
        <div tal:repeat="person cl['experts']">
            <div>
                <a href="${'{}/registry/person/{}'.format(request.script_name, person['id'])}"><img src="${h.gravatar(request, person['email'], 96)}" /></a>
            </div>
            <div>
                <div>${person['firstname']} ${person['familyname']}</div>
            </div>
        </div>
        </div>
    </div>
    </div>
</metal:block>
</metal:block>

