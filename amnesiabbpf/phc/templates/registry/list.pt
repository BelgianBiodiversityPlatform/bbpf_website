<div class="row" style="margin-top:20px">
    <div tal:repeat="person data.get('people', ())" class="col-xs-4 col-md-2" style="width:200;height:150px">
        <a href="${request.resource_path(context, 'person', query={'id':person['id']})}"><img src="${h.gravatar(request, person['email'], size=64, default='mm')}" class="img-circle" /></a>
        <div>${person['firstname']} ${person['familyname']}</div>
    </div>
</div>
